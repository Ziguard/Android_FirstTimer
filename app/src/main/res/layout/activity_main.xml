<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gef.myfirsttimer.MainActivity">

    <TextView
        android:id="@+id/main_saisie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clickBouton"
        android:text="@string/first_page_text"
        android:textSize="@dimen/main_taille_texte"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <Button
        android:id="@+id/bouton_envoyer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/couleurSasieBouton"
        android:text="@string/main_bouton_text"
        android:textSize="@dimen/main_taille_bouton"
        android:textColor="@android:color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:visibility="visible"
        />
</android.support.constraint.ConstraintLayout>
